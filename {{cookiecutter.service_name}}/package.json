{
    "name": "{{cookiecutter.service_name}}",
    "version": "1.0.0",
    "description": "{{cookiecutter.service_description}}",
    "scripts": {
      "postinstall": "run-p install:{{cookiecutter.function_name}}",
      "install:{{cookiecutter.function_name}}": "cd src/handlers/{{cookiecutter.function_name}} && npm install",
  
      "test": "run-p test:{{cookiecutter.function_name}}",
      "test:{{cookiecutter.function_name}}": "cd src/handlers/{{cookiecutter.function_name}} && npm run test"
    },
    "devDependencies": {
      "npm-run-all": "^4.0.2"
    }
  }